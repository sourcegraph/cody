{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnnecessaryContinue": "off"
            },
            "nursery": {
                "useExportType": "error",
                "useImportType": "error",
                "useGroupedTypeImport": "error",
                "noUnusedImports": "error",
                "noUnusedPrivateClassMembers": "error"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noConfusingVoidType": "off",
                "noArrayIndexKey": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useTemplate": "off",
                "noParameterAssign": "off",
                "useDefaultParameterLast": "off"
            },
            "a11y": {
                "useValidAnchor": "off"
            },
            "security": {
                "noDangerouslySetInnerHtml": "off"
            }
        },
        "ignore": [
            "node_modules/",
            "out/",
            "dist/",
            "build/",
            "**/test-data/**",
            "vscode/src/testutils/vscode/",
            "agent/src/bfg/__tests__/**",
            "agent/src/__tests__/**",
            "/vitest.workspace.js",
            "vitest.config.ts",
            "vite.config.ts",
            "__mocks__",
            "*.json",
            ".vscode-test/"
        ]
    },
    "formatter": {
        "ignore": [
            "node_modules/",
            ".github/PULL_REQUEST_TEMPLATE.md",
            "dist/**",
            "vscode/.vscode-test/**",
            "**/__snapshots__/**",
            "**/test-data/**",
            "vscode/src/testutils/vscode/**",
            "*.json"
        ],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 105
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single",
            "arrowParentheses": "asNeeded",
            "trailingComma": "es5"
        }
    }
}
